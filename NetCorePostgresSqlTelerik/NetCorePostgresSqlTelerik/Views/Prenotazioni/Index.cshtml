@using Kendo.Mvc.UI
@using Microsoft.AspNetCore.Identity

@model IEnumerable<NetCorePostgresSqlTelerik.Models.Prenotazioni>

@(Html.Kendo().Grid<Prenotazioni>()
    .Name("grid")
    .ToolBar(t => t.Create())
    .Columns(columns =>
    {
        columns.Bound(p => p.id);
        columns.Bound(p => p.idCorso);
        columns.Bound(p => p.idUtente);
        columns.Command(c => c.Edit());
    })
    .Pageable()
    .DataSource(dataSource => dataSource
            .Ajax()
            .PageSize(20)
            .Read(read => read.Action("GetPrenotazioni", "Prenotazioni"))
            .Create(create => create.Action("CreaPrenotazione", "Prenotazioni"))
            .Update(update => update.Action("ModificaPrenotazione", "Prenotazioni"))
    )
)


